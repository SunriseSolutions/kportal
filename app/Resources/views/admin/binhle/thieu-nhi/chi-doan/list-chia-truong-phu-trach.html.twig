{% block javascripts %}
    {% set chiDoan = admin.actionParams['chiDoan'] %}
    {% set cacDoiNhomGiaoLy = chiDoan.cacDoiNhomGiaoLy %}
    {% set phanBoHangNam = chiDoan.phanBoHangNam %}
