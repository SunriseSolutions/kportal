    <!-- Latest compiled and minified JavaScript -->
    <script src="{{ asset('assets/js/bootstrap-notify.min.js') }}"></script>

    <script>
        $(document).ready(function () {
            window.phanBo = {
                    {% set _counter = 0 %}
                    {% for phanBo in phanBoHangNam %}
                    {% if phanBo.huynhTruong is not empty or phanBo.duTruong is not empty %}
                    {% set _counter = _counter + 1 %}
                    {% set thanhVien = phanBo.thanhVien %}
                    {% spaceless %}
                    {% if _counter > 1 %}, {% endif %}
                "{{ thanhVien.code }}"
        :
            "{{ phanBo.id }}"
            {% endspaceless %}
            {% endif %}
            {% endfor %}
        }
            
            window.data =
                [
                    {% for phanBo in phanBoHangNam %}
                    {% set thanhVien = phanBo.thanhVien %}
                    {% if phanBo.huynhTruong is not empty or phanBo.duTruong is not empty %}
                    {% set doi1 = '' %}
                    {% set doi2 = '' %}
                    {% set doi3 = '' %}
                    {% for truongPhuTrach in phanBo.cacTruongPhuTrachDoi %}

                    {% if loop.index == 1 %}
                    {% set doi1 = truongPhuTrach.doiNhomGiaoLy.number %}
                    {% endif %}

                    {% if loop.index == 2 %}
                    {% set doi2 = truongPhuTrach.doiNhomGiaoLy.number %}
                    {% endif %}

                    {% if loop.index == 3 %}
                    {% set doi3 = truongPhuTrach.doiNhomGiaoLy.number %}
                    {% endif %}

                    {% endfor %}
                    {% spaceless %}
                    ["{{ thanhVien.code }}", '{{ thanhVien.christianName }}', '{{ thanhVien.lastName }}', '{{ thanhVien.middleName }}', '{{ thanhVien.firstName }}', '{{ doi1 }}', '{{ doi2 }}', '{{ doi3 }}'],
                    {% endspaceless %}
                    {% endif %}
                    {% endfor %}
                ];


            var container = document.getElementById('chiDoanSpreadSheet'),
                hot;
            var container1 = document.getElementById('example1'),
                hot1;

            window.cacDoiNhomGiaoLy = [{% for dngl in cacDoiNhomGiaoLy %} {% if loop.index > 1 %},{% endif %} {{ dngl.number }}{% endfor %}]
            window.validateDoi = function (doi1) {
                return doi1 === '' || doi1 === 'undefined' || ( $.isNumeric(doi1) && window.cacDoiNhomGiaoLy.indexOf(parseInt(doi1)) > -1 );
            }
            window.postDoi = function (doi1, doi2, doi3, phanBoId, thanhVienCode, thanhVienFirstName) {
                // Assign handlers immediately after making the request,
// and remember the jqxhr object for this request
                var chiaDoiPostURL = "{{ path('admin_app_binhle_thieunhi_chidoan_thieuNhiChiDoanChiaTruongPhuTrach',{'id':chiDoan.id}) }}";
                if (window.validateDoi(doi1) && window.validateDoi(doi2) && window.validateDoi(doi3) && phanBoId != 'undefined' && phanBoId != null
                ) {
                    var jqxhr = $.post(chiaDoiPostURL, {doi1: doi1, doi2: doi2, doi3: doi3, phanBoId: phanBoId})
                        .done(function () {
                            var doi = doi1 === '' || doi1 === 'undefined' ? '' : doi1;
                            doi += doi2 === '' || doi2 === 'undefined' ? '' : ', ' + doi2;
                            doi += doi3 === '' || doi3 === 'undefined' ? '' : ', ' + doi3;

                            $.notify({
                                // options
                                message: ' Trưởng ' + data[changedRow][4] + ' (' + thanhVienCode + ') đã được xếp vào đội ' + doi
                            }, {
                                // settings
                                type: 'success',
                                allow_dismiss: true,
                                delay: 7000,
                                newest_on_top: false,
                                showProgressbar: false,
                                placement: {
                                    from: "top",
                                    align: "center"
                                },
                            });
                        })
                        .fail(function () {
                            {% set huynhTruong = app.user.thanhVien %}
                            {% if huynhTruong.sex == 'NAM' %}
                            {% set truongName = 'anh ' ~ huynhTruong.firstName %}
                            {% elseif huynhTruong.sex is empty %}
                            {% set truongName = 'trưởng ' ~ huynhTruong.firstName %}
                            {% else %}
                            {% set truongName = 'chị ' ~ huynhTruong.firstName %}
                            {% endif %}
                            $.notify({
                                // options
                                message: 'Chết ngựa !!! Hình như rớt mạng. {{ truongName }} kiểm tra coi nếu không phải do rớt mạng thì thông báo cho Bình Lê biết sự cố ngay và lun nhé ...'
                            }, {
                                // settings
                                type: 'error',
                                allow_dismiss: true,
                                delay: 12000,
                                newest_on_top: false,
                                showProgressbar: false,
                                placement: {
                                    from: "top",
                                    align: "center"
                                },
                            });
                            setTimeout(window.postDoi(doi, phanBoId, thanhVienCode, thanhVienFirstName), 10000);

                        })
                        .always(function () {

                        });

// Perform other work here ...

// Set another completion function for the request above
                    jqxhr.always(function () {

                    });
                }
                else {
                    $.notify({
                        // options
                        message: 'Mã số đội phải nhập cho đúng nha chế ...'
                    }, {
                        // settings
                        type: 'error',
                        allow_dismiss: true,
                        delay: 7000,
                        newest_on_top: false,
                        showProgressbar: false,
                        placement: {
                            from: "top",
                            align: "center"
                        },
                    });
                }
            }

            window.hot = new Handsontable(container, {
                data: window.data,
                columnSorting: true,
                currentRowClassName: 'currentRow',
                currentColClassName: 'currentCol',
                contextMenu: false,
                autoWrapRow: true,
                startRows: 7,
                startCols: 4,
                rowHeaders: true,
                afterChange: function (change, source) {
                    if (source !== 'edit') {
                        return; //don't save this change
                    }
//                    if (!autosave.checked) {
//                        return;
//                    }

                    changedRow = change[0][0];
                    var data = window.hot.getData();
                    var thanhVienCode = data[changedRow][0];
                    var thanhVienFirstName = data[changedRow][4];
                    var phanBoId = window.phanBo[thanhVienCode];
                    var doi1 = data[changedRow][5];
                    var doi2 = data[changedRow][6];
                    var doi3 = data[changedRow][7];
                    window.postDoi(doi1, doi2, doi3, phanBoId, thanhVienCode, thanhVienFirstName);

                }
                ,
                colHeaders: ['#', 'Tên Thánh', 'Họ', 'Tên Lót', 'Tên', 'Đội thứ nhất', 'Đội thứ 2', 'Đội thứ 3'],
                columns: [
                    {
                        readOnly: true
                    },
                    {
                        readOnly: true,
                        type: 'dropdown',
                        source: [
                            {% spaceless %}
                            {% for vn,en in christianNames %}
                            {{ loop.index > 1?',':'' }}
                            '{{ vn }}'
                            {% endfor %}
                            {% endspaceless %}
                        ]
                    },
                    {readOnly: true},
                    {readOnly: true},
                    {readOnly: true},
                    {
                        type: 'dropdown',
                        source: window.cacDoiNhomGiaoLy
                    },
                    {
                        type: 'dropdown',
                        source: window.cacDoiNhomGiaoLy
                    },
                    {
                        type: 'dropdown',
                        source: window.cacDoiNhomGiaoLy
                    }
                ]
            });

            function bindButtons() {

                Handsontable.dom.addEvent(document.body, 'click', function (e) {

                    var element = e.target || e.srcElement;

                    if (element.nodeName == "BUTTON" && element.name == 'save') {
                        var name = element.getAttribute('data-dump');
                        var instance = element.getAttribute('data-instance');
                        var hot = window[instance];
                        data = hot.getData();
                        console.log(window.data[0][0]);
                        window.data[0][0] = 'aaaaaaaaaaaaaa';
//                        console.log(name);
//                        console.log(instance);
                        console.log(window.data[0][0]);
                        console.log('data of ' + name, hot.getData());
                        hot.loadData(window.data);

                        $.notify({
                            // options
                            message: 'Dumping Data ' + name
                        }, {
                            // settings
                            type: 'success',
                            allow_dismiss: true,
                            delay: 7000,
                            newest_on_top: false,
                            showProgressbar: false,
                            placement: {
                                from: "top",
                                align: "center"
                            },
                        });
                    }
                });
            }

            bindButtons();

        });
    </script>
{% endblock %}

